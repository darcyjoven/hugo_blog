{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "tasks": [
        {
            "label": "new post",
            "type": "shell",
            "command": "./new.exe"
        },
        {
            "label": "git add",
            "type": "shell",
            "command": "git add ."
        },
        {
            "label": "git commit",
            "type": "shell",
            "command": "git commit -m '${input:comment}'",
            "dependsOn": [
                "git add"
            ]
        },
        {
            "label": "git push",
            "type": "shell",
            "command": "git push -u origin main",
            "dependsOn": [
                "git commit"
            ]
        },
        {
            "label": "hugo public",
            "type": "shell",
            "command": "hugo -d public",
            "dependsOn": [
                "git push"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "echo  试试${input:comment}",
            "dependsOn": []
        },
        {
            "label": "test2",
            "type": "shell",
            "command": "echo  试试${input:comment}",
            "dependsOn": []
        },
        {
            "label": "git add2",
            "type": "shell",
            "command": "git -C ./public add .",
            "dependsOn": [
                "hugo public"
            ]
        },
        {
            "label": "git commit2",
            "type": "shell",
            "command": "git -C ./public commit -m '${input:comment}'",
            "dependsOn": [
                "git add2"
            ]
        },
        {
            "label": "git push2",
            "type": "shell",
            "command": "git -C ./public push",
            "dependsOn": [
                "git commit2"
            ]
        }, 
        {
            "label": "push all",
            "type": "shell",
            "command": "echo 全部任务已完成，可以关闭窗口！",
            "dependsOn": [
                "git push2"
            ]
        }, 
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "comment", 
            "default": "comment",
            "description": "请输入备注", 
        }
    ]
}